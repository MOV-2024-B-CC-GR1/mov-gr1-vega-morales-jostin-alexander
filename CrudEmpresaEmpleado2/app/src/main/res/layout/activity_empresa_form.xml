<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Nombre -->
        <EditText
            android:id="@+id/etNombreEmpresa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre de la Empresa"
            android:layout_marginBottom="8dp"/>

        <!-- Ubicación -->
        <EditText
            android:id="@+id/etUbicacionEmpresa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ubicación"
            android:layout_marginBottom="8dp"/>

        <!-- Ingresos anuales -->
        <EditText
            android:id="@+id/etIngresosEmpresa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingresos Anuales"
            android:inputType="numberDecimal"
            android:layout_marginBottom="8dp"/>

        <!-- Número de empleados -->
        <EditText
            android:id="@+id/etNumEmpleados"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Número de Empleados"
            android:inputType="number"
            android:layout_marginBottom="8dp"/>

        <!-- Nuevos campos para coordenadas -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ubicación en el mapa"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>

        <!-- Latitud -->
        <EditText
            android:id="@+id/etLatitud"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Latitud (Ej: -12.0464)"
            android:inputType="numberDecimal|numberSigned"
            android:layout_marginBottom="8dp"/>

        <!-- Longitud -->
        <EditText
            android:id="@+id/etLongitud"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Longitud (Ej: -77.0428)"
            android:inputType="numberDecimal|numberSigned"
            android:layout_marginBottom="16dp"/>

        <!-- Botón Guardar -->
        <Button
            android:id="@+id/btnGuardarEmpresa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar" />
    </LinearLayout>
</ScrollView>