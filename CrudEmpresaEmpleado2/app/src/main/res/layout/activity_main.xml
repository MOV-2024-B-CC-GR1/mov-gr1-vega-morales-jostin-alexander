<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6AE6FFFF"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Botón para ver la lista de empresas -->
    <Button
        android:id="@+id/btnVerEmpresas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Ver Empresas" />

    <!-- Botón para agregar una nueva empresa -->
    <Button
        android:id="@+id/btnAgregarEmpresa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Agregar Empresa" />

</LinearLayout>
